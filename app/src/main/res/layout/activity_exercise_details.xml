<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="10sp"
    tools:context=".Exercise_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="110sp"
        android:layout_marginTop="10sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher_background"
        android:id="@+id/animation"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/nameEx"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/animation"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="00:15"
        android:layout_marginLeft="10sp"
        android:layout_height="wrap_content"
        android:id="@+id/duration"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
        android:layout_marginLeft="10sp"
        android:layout_below="@+id/nameEx"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_height="wrap_content"
        android:id="@+id/content"
        android:textColor="#000"
        android:layout_marginBottom="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equipment Required"
        android:layout_below="@+id/content"
        android:textColor="#000"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/equipment"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bench, Plate, Lock"
        android:layout_below="@+id/equipment"
        android:id="@+id/e"
        android:layout_marginLeft="10sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Target Muscle"
        android:layout_below="@+id/e"
        android:textColor="#000"
        android:layout_margin="10sp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/target"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chest"
        android:layout_below="@+id/target"
        android:id="@+id/targetMuscle"
        android:layout_marginLeft="10sp"
        />

    <ImageView
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:src="@drawable/startbtn"
        android:id="@+id/starworkout"
        android:layout_below="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginTop="20sp"
        />


    </RelativeLayout>
</ScrollView>